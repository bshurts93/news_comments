<h1 class="text-center">{{message}}</h1>

<div class="container">
  <div class="article-box">
    {{#each articles}}
    <div class="article" data-id={{_id}}>
      <div class="row">
        <div class="col-lg-3 article-image">
          <img src="{{image}}" alt="">
        </div>

        <div class="col-lg-9 article-content">
          <h3>{{title}}</h3>
          <p>{{content}}</p>
          <p>{{timestamp}}</p>
          <a href="{{link}}" target="_blank">Read more</a>
        </div>
      </div>

      <div class="row">
        <form id="comment-form" action="/submit" method="post" data-id={{_id}}>
          <textarea id="comment-field" type="text" name="comment" placeholder="comment"></textarea>

          <button id="add-comment">Add comment</button>
          <button id="view-comments" data-id={{_id}}>View comments</button>
        </form>
      </div>

      <div class="row">
        <div class="comments" id="comments-{{_id}}">

        </div>
      </div>
    </div>



    {{/each}}
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="app.js"></script>



